generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  name       String?
  location   String?
  followers  Int?
  following  Int?
  created_at DateTime   @default(now())
  Language   Language[]

  @@map("user")
}

model Language {
  id       Int    @id @default(autoincrement())
  user     User   @relation(fields: [user_id], references: [id])
  user_id  Int
  language String

  @@unique([user_id, language])
  @@map("language")
}
